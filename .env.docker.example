# Jutsu Trading Dashboard - Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Schwab API Credentials
# ============================================================================
# Get these from developer.schwab.com after creating an app
SCHWAB_APP_KEY=your_schwab_app_key_here
SCHWAB_APP_SECRET=your_schwab_app_secret_here
SCHWAB_CALLBACK_URL=https://127.0.0.1

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (default, no additional setup required)
DATABASE_URL=sqlite:////app/data/market_data.db

# PostgreSQL (if you prefer, requires separate PostgreSQL container)
# DATABASE_URL=postgresql://jutsu:password@postgres:5432/jutsu_db

# ============================================================================
# Application Settings
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Timezone for market hours and scheduling
# Common values: America/New_York, America/Chicago, America/Los_Angeles
TZ=America/New_York

# Trading mode: offline_mock (simulated) or online_live (real trading)
# Start with offline_mock for testing, switch to online_live when ready
TRADING_MODE=offline_mock

# ============================================================================
# Optional API Authentication
# ============================================================================
# If set, enables HTTP Basic authentication for the API
# Leave empty to disable authentication (local development only)
JUTSU_API_USERNAME=
JUTSU_API_PASSWORD=

# ============================================================================
# Advanced Settings (Optional)
# ============================================================================
# Number of Uvicorn worker processes (default: 1)
# Increase for higher throughput, but uses more memory
UVICORN_WORKERS=1

# FastAPI debug mode (default: false)
# Enable for development, disable for production
FASTAPI_DEBUG=false

# Maximum WebSocket connections (default: 100)
MAX_WEBSOCKET_CONNECTIONS=100

# ============================================================================
# Resource Limits (for docker-compose.yml)
# ============================================================================
# CPU limit (cores)
DOCKER_CPU_LIMIT=2.0
DOCKER_CPU_RESERVATION=0.5

# Memory limit
DOCKER_MEMORY_LIMIT=2G
DOCKER_MEMORY_RESERVATION=512M
